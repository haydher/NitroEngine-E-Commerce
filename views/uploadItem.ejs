<!DOCTYPE html>
<html lang="en">
 <head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Upload New Item</title>
</head>
 <body>
  <% if (locals.message) { %>
   <h5> <%= message %>  </h5>
  <% } %>

  <% let fieldValues %> 
  <% if (locals.data) { %>
   <% fieldValues = data %> 
  <% } %>
  <form action="/upload/item" enctype="multipart/form-data" method="POST">
   <label for="price">Item Price: </label><br>
   <% if (fieldValues?.price != undefined) { %>
    <input type="number" step="0.01" name="price" id="price" value=<%= fieldValues.price  %> required />
   <% }  else {%>
    <input type="number" step="0.01" name="price" id="price" required />
   <% } %>

   <br />
   <br />
   
   <label for="name">Item Name: </label><br>
   <% if (fieldValues?.name != undefined) { %>
    <input type="text" name="name" id="name" value=<%= fieldValues.name  %> required />
   <% }  else {%>
    <input type="text" name="name" id="name" required />
   <% } %>
  
   <br />
   <br />
   
   <label for="description">Item Description:</label><br>
   <% if (fieldValues?.description != undefined) { %>
    <textarea  name="description" id="description" required><%=fieldValues.description%> </textarea>
   <% }  else {%>
    <textarea  name="description" id="description"  required>The Nike Trail Dri-FIT T-Shirt delivers the smooth comfort you expect from a running tee. It features an enlarged graphic, celebrating runs on rocky roads.
    </textarea>
   <% } %>
  
   <br />
   <br />

   <label for="type">Item Type:</label><br>
   <% if (fieldValues?.type != undefined) { %>
    <input type="text" name="type" id="type"  value=<%= fieldValues.type  %> required />
   <% }  else {%>
    <input type="text" name="type" id="type" required />
   <% } %>

   <br />
   <br />

   <label for="brand">Item Brand:</label><br>
   <% if (fieldValues?.brand != undefined) { %>
    <input type="text" name="brand" id="brand"  value=<%= fieldValues.brand  %> required />
   <% }  else {%>
    <input type="text" name="brand" id="brand" value="Nike" required />
   <% } %>

   <br />
   <br />
   <label for="category">Item Category:</label>
   <!-- <input type="text" name="category" id="category" required /> -->
   <select name="category" id="category" required>
    <option value="shirts">Shirts</option>
    <option value="shoes">Shoes</option>
    <option value="hoodie">Hoodie</option>
    <option value="jeans">Jeans</option>
   </select>

   <br />
   <br />

   <label for="gender">Item Gender:</label><br>
   <% if (fieldValues?.gender != undefined) { %>
    <input type="text" name="gender" id="gender" value=<%= fieldValues.gender  %> required />
   <% }  else {%>
    <input type="text" name="gender" id="gender" required />
   <% } %>
   
   <br />
   <br />
   <label for="tags">Item Tags:</label><br>
   <% if (fieldValues?.tags != undefined) { %>
    <input type="text" name="tags" id="tags" value=<%= fieldValues.tags  %> required />
   <% }  else {%>
    <input type="text" name="tags" id="tags" value="red blue yellow black white" required />
   <% } %>
   
   <br />
   <br />
   <label for="sizes">Item Sizes:</label><br>
   <% if (fieldValues?.sizes != undefined) { %>
    <input type="text" name="sizes" id="sizes" value=<%= fieldValues.sizes  %> required />
   <% }  else {%>
    <input type="text" name="sizes" id="sizes" value="XS, SM, M, L, XL" required />
   <% } %>
   
   <br />
   <br />
   <label for="images">Item Images:</label><br>
   <input type="file" name="images" id="images" multiple="multiple" />
   <br /><br />
   <button>Upload</button>
  </form>
 </body>
</html>
